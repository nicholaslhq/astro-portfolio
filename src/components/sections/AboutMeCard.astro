---
import { getAndGroupUniqueTags } from "../../lib/utils";
import { PROFILE } from "../../content/profileData";

const tagsMap = await getAndGroupUniqueTags();

const skills = PROFILE.skills;
---

<div class="flex flex-col gap-2">
  <p class="text-sm font-light mb-1">
    {PROFILE.motto}
  </p>

  <p class="text-sm mb-1">
    {PROFILE.headLine1}
  </p>

  <p class="text-sm mb-1">
    {PROFILE.headLine2}
  </p>

  <hr />

  <p class="text-sm font-light">I primarily use these technologies:</p>
  <ul class="list-inside list-disc">
    {
      skills.map((skill) => {
        if (tagsMap.has(skill)) {
          return (
            <li>
              <a
                href={`/tags/${encodeURIComponent(skill)}`}
                class=" hover:underline"
              >
                {decodeURIComponent(skill)}
              </a>
            </li>
          );
        } else {
          return (
            <li>
              <span>{skill}</span>
            </li>
          );
        }
      })
    }
  </ul>

  <p class="text-sm font-light">
    Etc.
  </p>

  <hr />

  <p class="text-sm font-light">
    More about my <a href="/experiences" class="underline">Experiences</a> and my
    <a href="/projects" class="underline">Projects</a>.
  </p>
</div>
