---
import { Button } from '../ui/button'
import { PROFILE } from "../../content/profileData";
import ContactDialog from '../react/ContactDialog';
import { Linkedin, Github, Mail, Youtube, Twitter, FileText, Book } from 'lucide-react'
---

<div class="flex h-full w-full">
  <div class="flex flex-col justify-between gap-4 md:max-h-[300px]">
    <div class="flex h-full flex-col">
      <p class="m-0 text-xl font-light">
        Hi, I'm
        <b class="font-bold">{PROFILE.firstName}</b>, {PROFILE.introduction}.
      </p>
      <ul class="pt-4">
        {PROFILE.shortIntros.map((intro, index) => (
          <>
            {index === (PROFILE.shortIntros.length / 2)
              //when it is even number, and in the middle add an empty line

              ? <br/>
              :
              <></>
            }
            <li>{intro}</li>
          </>
        ))}
      </ul>
    </div>
    <div class="flex gap-4">
      <ContactDialog triggerType="button" client:load />
      {PROFILE.links?.form && (
        <a href={PROFILE.links.form} aria-label="Form" target="_blank">
          <Button aria-label="Form">
            <FileText />
            <span class="sr-only">Form</span>
          </Button>
        </a>
      )}
      {PROFILE.links?.github && (
        <a href={PROFILE.links.github} aria-label="GitHub profile" target="_blank">
          <Button aria-label="GitHub profile">
            <Github />
            <span class="sr-only">GitHub Profile</span>
          </Button>
        </a>
      )}
      {PROFILE.links?.linkedin && (
        <a href={PROFILE.links.linkedin} aria-label="Linkedin profile" target="_blank">
          <Button aria-label="Linkedin profile">
            <Linkedin />
            <span class="sr-only">Linkedin Profile</span>
          </Button>
        </a>
      )}
      {PROFILE.links?.youtube && (
        <a href={PROFILE.links.youtube} aria-label="YouTube channel" target="_blank">
          <Button aria-label="YouTube Channel">
            <Youtube />
            <span class="sr-only">YouTube Channel</span>
          </Button>
        </a>
      )}
      {PROFILE.links?.twitter && (
        <a href={PROFILE.links.twitter} aria-label="Twitter profile" target="_blank">
          <Button aria-label="Twitter Profile">
            <Twitter />
            <span class="sr-only">Twitter Profile</span>
          </Button>
        </a>
      )}
      {PROFILE.links?.goodreads && (
        <a href={PROFILE.links.goodreads} aria-label="Goodreads profile" target="_blank">
          <Button aria-label="Goodreads">
            <Book />
            <span class="sr-only">Goodreads</span>
          </Button>
        </a>
      )}
    </div>
  </div>
  <img
    src={PROFILE.avatarUrl}
    class="pointer-events-none absolute bottom-[-20px] right-[-100px] z-[-1] max-h-[300px] w-auto select-none opacity-30 md:relative md:bottom-auto md:right-auto md:z-auto md:opacity-100"
    width="100%"
    height="auto"
    alt={`Image of ${PROFILE.profileName}`}
  />
</div>

