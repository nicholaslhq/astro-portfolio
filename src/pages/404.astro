---
import BaseLayout from "../layouts/BaseLayout.astro";
import { buttonVariants } from "../components/ui/button";
import { PROFILE } from "../content/profileData";
---

<BaseLayout
  title="404 - Not Found"
  description="404 Error â€” this page was not found"
>
  <main class="flex h-[80vh] flex-auto">
    <div class="flex flex-col items-center justify-center px-8">
      <img
        src={PROFILE.pageNotFoundUrl}
        class="pointer-events-none max-h-[250px] w-auto select-none"
        width="100%"
        height="auto"
        alt="Page not found"
      />
      <p class="text-xl text-muted-foreground">404</p>
      <h1 class="text-4xl font-extrabold tracking-tight lg:text-5xl">
        Page Not Found
      </h1>
      <p class="mb-4 leading-7 [&:not(:first-child)]:mt-6">
        Sorry, we couldn't find the page you're looking for
      </p>
      <a href="/" rel="noreferrer" class={buttonVariants()}>Go to Homepage</a>
    </div>
  </main>
</BaseLayout>
